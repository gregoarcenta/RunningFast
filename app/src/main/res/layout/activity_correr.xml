<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="facci.arcentales.runningfast.CorrerActivity"
    android:fitsSystemWindows="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondofast">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:weightSum="1">
            <LinearLayout
                android:id="@+id/tiempo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_20dp"
                android:layout_weight="0.4">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/min_seg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min:seg"
                    android:textSize="30sp"
                    android:textColor="@color/icons"
                    android:layout_marginLeft="120dp"
                    android:layout_below="@id/conteo_tiempo"/>
                <Chronometer
                    android:id="@+id/conteo_tiempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="60sp"
                    android:layout_marginTop="60dp"
                    android:textAlignment="center"
                    android:textColor="@color/icons"/>
                <LinearLayout
                    android:id="@+id/lat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/padding_40dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/min_seg">
                    <Chronometer
                        android:id="@+id/conteo_distancia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:format="00:00"
                        android:padding="@dimen/padding_10dp"
                        android:textSize="35sp"
                        android:textAlignment="center"
                        android:textColor="@color/icons"
                        android:layout_weight="0.5" />
                    <Chronometer
                        android:id="@+id/conteo_velocidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:format="00:00"
                        android:padding="@dimen/padding_10dp"
                        android:textSize="35sp"
                        android:textAlignment="center"
                        android:textColor="@color/icons"
                        android:layout_weight="0.5"
                        android:layout_toRightOf="@+id/conteo_distancia"/>
                </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Km"
                        android:layout_below="@+id/lat"
                        android:layout_marginLeft="75dp"
                        android:textSize="30sp"
                        android:textColor="@color/icons"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/botones"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/botones"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:background="@drawable/button_border_stop_play">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <ImageView
                                android:id="@+id/stop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_border_stop_play"
                                android:layout_gravity="center"
                                android:src="@drawable/stop100"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/contador"
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="@color/icons"
                                android:textSize="40sp"
                                android:visibility="visible"
                                android:layout_marginBottom="@dimen/padding_10dp"/>
                            <TextView
                                android:id="@+id/comenzar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="@string/comenzar"
                                android:layout_gravity="center|bottom"
                                android:layout_marginBottom="@dimen/padding_5dp"
                                android:textColor="@color/icons"
                                android:visibility="visible"/>

                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <ImageView
                                android:id="@+id/pausa"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_border_stop_play"
                                android:src="@drawable/pause100"
                                android:visibility="visible"/>
                            <ImageView
                                android:id="@+id/start"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_border_stop_play"
                                android:src="@drawable/play100"
                                android:visibility="invisible" />
                        </FrameLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/map"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="@dimen/padding_30dp"/>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>